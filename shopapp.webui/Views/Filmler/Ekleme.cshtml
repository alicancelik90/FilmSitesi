@model Film






<form method="POST">
    <div asp-validation-summary ="All" class="text-danger"></div>
    <div class="form-group">
        <label for="Name">Film Adı</label>
        <input type="text" value="@Model.Name" name="Name" class="form-control">
        <span asp-validation-for ="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Sene">Film Yılı</label>
        <input type="text" value="@Model.Sene" name="Sene" class="form-control">
        <span asp-validation-for ="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Description">Film Açıklaması</label>
        <textarea name="Description" value="@Model.Description" class="form-control"></textarea>
        <span asp-validation-for ="Name" class="text-danger"></span> 
    </div>

    <div class="form-group">
        <label for="ResimUrl">ResimUrl</label>
        <input type="text" value="@Model.ResimUrl" name="ResimUrl" class="form-control">
        <span asp-validation-for ="Name" class="text-danger"></span>
    </div>

    
    <div class="form-group">
        <label for="CategoryId">Kategori Numarası</label>
        <select asp-for ="KategoriId" asp-items ="@ViewBag.Kategoriler" class="form-control">
            <option selected disabled>Seçiniz...</option>
        </select>
        <span asp-validation-for ="Name" class="text-danger"></span>
    </div> 

    <button type="submit" class="btn btn-primary">Kaydet</button>
    
</form>