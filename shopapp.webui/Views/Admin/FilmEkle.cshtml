@model FilmModel

<h1 class="h3">Film Ekle</h1>
<hr>
<div class="row">
 <div class="col-md-8">

  <form asp-controller="Admin" asp-action="FilmEkle" method="POST">
    <div class="form-group row">
        <label  asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
           <input  class="form-control" asp-for="Name">
        </div>
    </div>

    <div class="form-group row">
        <label  asp-for="Url" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
           <input  class="form-control" asp-for="Url">
        </div>
    </div>

     <div class="form-group row">
        <label  asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
           <textarea class="form-control" asp-for="Description"></textarea>  
        </div>
    </div>

     <div class="form-group row">
        <label  asp-for="Sene" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
           <input  class="form-control" asp-for="Sene">
        </div>
    </div>

     <div class="form-group row">
        <label  asp-for="ResimUrl" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
           <input class="form-control" asp-for="ResimUrl">
        </div>
    </div>

      <div class="form-group row">
      
        <div class="col-sm-10 offset-sm-2">
          <button type="submit"  class="btn btn-primary">Film Kaydet</button>
        </div>
    </div>
  </form>
  </div>
</div>