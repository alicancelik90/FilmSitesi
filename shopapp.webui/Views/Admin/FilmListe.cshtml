@model FilmListeViewModel

<div class="row">
    <div class="col md-12">
        <h1>Admin Filmler</h1>
        <hr>
        <a class="btn btn-primary btn-sm" href="/admin/filmler/ekle">Film Ekle</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td style="width: 30px;">Id</td>
                    <td style="width: 100px;">Resim</td>
                    <td>Name</td>
                    <td style="width: 20px;">Sene</td>
                    <td style="width: 20px;">Anasayfa</td>
                    <td style="width: 20px;">OnaylÄ±</td>
                    <td style="width: 150px;"></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Filmler.Count>0)
                {
                      @foreach (var item in Model.Filmler)
                      {
                          <tr>

                            <td>@item.FilmId</td>
                            <td><img src="~/img/@item.ResimUrl" width="80"></td>
                            <td>@item.Name</td>
                            <td>@item.Sene</td>
                            <td>
                                @if (item.AnasayfaGosterim)
                                {
                                    <i class="fas fa-check"></i>
                                }
                                else
                                {
                                     <i class="fas fa-times-circle"></i>
                                }
                                <td>
                                    @if (item.Gosterim)
                                    {
                                    <i class="fas fa-check"></i>
                                    }
                                    else
                                    {
                                     <i class="fas fa-times-circle"></i>
                                    }
                                </td>
                           </td>
                            <td>
                               
                               <a href="/admin/filmler/@item.FilmId" class="btn btn-primary btn-sm mr-2">Duzenle</a>
                               <form action="/admin/filmsil" method="POST" style="display: inline;">
                                  <input type="hidden" name="filmId" value="@item.FilmId">
                                  <button type="submit" class="btn btn-danger btn-sm">Delete</button>

                               </form>
                              
                               
                           </td>
                         </tr>
                      }
                }
                  
                else
                {
                      <div class="alert alert-warning">
                          <h3>Film Yok</h3>
                      </div>
                }
               
             
            </tbody>

        </table>
    </div>
</div>