@model FilmModel

<h1 class="h3">Film Ekle</h1>
<hr>

<form asp-controller="Admin" asp-action="FilmDuzenle" method="POST">

<div class="row">


  
  <div class="col-md-8"> 

 
    <input type="hidden" name="FilmId" value="@Model.FilmId">

    <div class="form-group row">
        <label  asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
           <input  class="form-control" asp-for="Name">
        </div>
    </div>

    <div class="form-group row">
        <label  asp-for="Url" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
           <input  class="form-control" asp-for="Url">
        </div>
    </div>

    <div class="form-group row">
        <label  asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
           <textarea class="form-control" asp-for="Description"></textarea>  
        </div>
    </div>

    <div class="form-group row">
        <label  asp-for="Sene" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
           <input  class="form-control" asp-for="Sene">
        </div>
    </div>

    <div class="form-group row">
        <label  asp-for="ResimUrl" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
           <input class="form-control" asp-for="ResimUrl">
        </div>
    </div>

    <div class="form-group row">
      
        <div class="col-sm-10 offset-sm-2">
          <button type="submit"  class="btn btn-primary">Film Kaydet</button>
        </div>

    </div>

   </div>
 
   


  <div class="col-md-4">
      @foreach (var item in (List<Kategori>)ViewBag.Kategoriler)
       {
        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" 
            name="kategoriIdler"
            value="@item.KategoriId"
            id="kategori_@(item.KategoriId)" @(Model.KategoriSecim.Any(i=>i.KategoriId==item.KategoriId)?"checked":"")>

            <label class="custom-control-label" for="kategori_@(item.KategoriId)">@item.Name</label>
        </div> 
       }

       <hr>

        <div class="custom-control custom-checkbox">
            <input asp-for="Gosterim" type="checkbox" class="custom-control-input"> 
           
            <label asp-for="Gosterim" class="custom-control-label"></label>
        </div> 
         <div class="custom-control custom-checkbox">
            <input asp-for="AnasayfaGosterim" type="checkbox" class="custom-control-input"> 
           
            <label asp-for="AnasayfaGosterim" class="custom-control-label"></label>
        </div> 
  </div>
 
 
</div>

</form>
 


