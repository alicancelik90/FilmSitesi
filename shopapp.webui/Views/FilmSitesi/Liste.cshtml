@model FilmListeViewModel






<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Filmler</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>

<body>
   
        
            <div class="row">
                <div class="col-md-3">
                    @await Component.InvokeAsync("Kategoriler")
                </div>
                <div class="col-md-9">
                  
                   <div class="row">

                       @foreach (var f in Model.Filmler)
                       {

                        <div class="col-md-4">
                           @await Html.PartialAsync("_film",f)
            
                        </div>
        
                       }

                    </div>

                    <div class="row">
                        <div class="col">
                             <nav aria-label="Page navigation example">
                                <ul class="pagination">
                                     @for (int i =0; i < Model.PageInfo.TotalPages(); i++)
                                     {
                                        @if (String.IsNullOrEmpty(Model.PageInfo.CurrentKategori))
                                        {
                                             <li class="page-item @(Model.PageInfo.CurrentPage==i+1?"active":"")">
                                               <a class="page-link" href="/film listesi?page=@(i+1)">
                                                  @(i+1)
                                               </a>
                                             </li>
                                        }
                                        else
                                        {
                                             <li class="page-item @(Model.PageInfo.CurrentPage==i+1?"active":"")">
                                               <a class="page-link" href="/film listesi/@Model.PageInfo.CurrentKategori?page=@(i+1)">
                                                  @(i+1)
                                               </a>
                                             </li>
                                        }
                                      
                                     }
            
                                   
                                   
                               </ul>
                            </nav>
                        </div>
                    </div>

                </div>
          </div>
              
</body>

</html>